@model List<BlogWeb.Models.Entities.BlogPost>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                BlogWeb - The Dev Blog
            </h1>
            <p>
                BlogWeb is the come to coding blogs covering a vast range of topics like HTML, CSS, Javascript, ASP.NET, C#, Angular etc. 
                Want to read the latest dev articles? Join the blogWeb app and get weekly blogs in your notifications.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/270408/pexels-photo-270408.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="BlogWeb -Dev blogs"
                class="d-block mx-lg-auto img-fluid" width="300"/>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model!=null && Model.Any()){
                foreach(var post in Model){
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@post.FeaturedImageUrl" alt="@post.Heading" class="mb-2 d-block img-fluid" />
                        <h2 class="mb-4">@post.Heading</h2>
                        <p class="mb-4">
                            Author: @post.CreatedBy
                            <br />
                            Published Date: @post.PublishedDate.ToShortDateString()

                        </p>
                        <p class="mb-4">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-4">
                            @post.ShortDescription
                        </p>
                        <a class="btn btn-dark" 
                            asp-area=""
                            asp-controller="Blogs"
                            asp-action="Index"
                            asp-route-urlHandle="@post.UrlHandle"

                        >Read More</a>
                    </div>
                }
            }
        </div>
    </div>
</div>