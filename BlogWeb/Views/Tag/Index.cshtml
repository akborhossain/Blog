@model List<BlogWeb.Models.Entities.Tag>
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Show all tags </h1>
    </div>
</div>
<div class="container py-5"> 
    @if(Model !=null && Model.Any()){
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayName</td>

                    </tr>
                }
            </tbody>

        </table>
    }else{
        <p>No tags found!</p>
    }
</div>